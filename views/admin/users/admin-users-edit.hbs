			<div class="alert alert-danger" role="alert">
			Id không tồn tại. <a href="/admin-users/Admin" class="alert-link">Quay lại</a>.
			</div>
			{{else}}
			<!-- EDIT USER MODAL -->
			<div>
				<div class="modal-dialog modal-lg">
					<div class="modal-content">
						<div class="modal-header bg-primary">
							<h5 class="modal-title text-white" id="addPostModalLabel">Sửa người dùng</h5>
						</div>
						<form method="POST" action="/admin-users/update/admin">
							<div class="modal-body">
								<div class="form-group">
									<label for="txtUserID" class="form-control-label">#</label>
									<input readonly type="text" id="txtUserID" name="Id" class="form-control" value="{{this.user.Id}}">
								</div>
								<div class="form-group">
									<label for="txtUserName" class="form-control-label">Họ và tên</label>
									<input type="text" id="txtUserName" name="Name" class="form-control" value="{{this.user.Name}}" placeholder="Nhập họ và tên">
								</div>
								<div class="form-group">
									<label for="txtUserEmail" class="form-control-label">Email</label>
									<input type="email" id="txtUserEmail" name="Email" class="form-control" value="{{this.user.Email}}" placeholder="Nhập Email">
								</div>
							</div>
							<div class="modal-footer">
								<a class="btn btn-primary" data-dismiss="modal" href="/admin-users/admin">
									<i class="fa fa-backward" aria-hidden="true"></i> Quay lại</a>
								<button type="submit" class="btn btn-outline-danger" formaction="/admin-users/delete">
									<i class="fa fa-trash-o" aria-hidden="true"></i>
									Xóa
								</button>
								<button type="submit" class="btn btn-success" data-dismiss="modal">
									<i class="fa fa-check" aria-hidden="true"></i>
									Lưu
								</button>
							</div>
						</form>
					</div>
				</div>
			</div>
